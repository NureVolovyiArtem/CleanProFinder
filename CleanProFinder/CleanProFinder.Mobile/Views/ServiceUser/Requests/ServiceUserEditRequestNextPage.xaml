<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CleanProFinder.Mobile.Views.ServiceUser.Requests.ServiceUserEditRequestNextPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:requests="clr-namespace:CleanProFinder.Mobile.ViewModels.ServiceUser.Requests"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:DataType="requests:ServiceUserEditRequestNextViewModel"
    Background="{StaticResource Secondary}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:IsNotNullConverter x:Key="IsNotNullConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="145, 150, 321, auto" RowSpacing="5">
        <Label Style="{StaticResource Key=labelTitleStyle}" Text="View Request" />
        <VerticalStackLayout Grid.Row="1">
            <Label Style="{StaticResource labelPropertyStyle}" Text="Description" />
            <Border Style="{StaticResource borderStyle}">
                <Editor
                    AutoSize="TextChanges"
                    HeightRequest="104"
                    IsReadOnly="True"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding Request.Description}" />
            </Border>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="2" IsVisible="{Binding Request, Converter={StaticResource IsNotNullConverter}}">
            <Label Style="{StaticResource labelPropertyStyle}" Text="Service Provider (optional)" />
            <Border
                Margin="10,15,10,3"
                Background="{StaticResource Tertiary}"
                Stroke="{StaticResource Tertiary}"
                StrokeShape="RoundRectangle 10,10,10,10">
                <Label
                    Margin="12"
                    FontAttributes="Bold"
                    FontFamily="OpenSans"
                    FontSize="18"
                    Text="{Binding Request}"
                    TextColor="White" />
                <Border.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="1" />
                </Border.GestureRecognizers>
            </Border>
        </VerticalStackLayout>
        <Button
            Grid.Row="3"
            Command="{Binding GoBackToRequestsCommand}"
            Style="{StaticResource buttonStyle}"
            Text="Go back"
            TextColor="White">
            <Button.Triggers>
                <DataTrigger
                    Binding="{Binding IsCanceled}"
                    TargetType="Button"
                    Value="False">
                    <Setter Property="Text" Value="Cancel Request" />
                    <Setter Property="Command" Value="{Binding CancelRequestCommand}" />
                    <Setter Property="Background" Value="DarkRed" />
                </DataTrigger>
            </Button.Triggers>
        </Button>
    </Grid>
</ContentPage>