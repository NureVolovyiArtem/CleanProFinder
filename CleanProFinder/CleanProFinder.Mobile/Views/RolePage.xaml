<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CleanProFinder.Mobile.Views.RolePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:CleanProFinder.Mobile.ViewModels"
    Title="RolePage"
    x:DataType="viewmodel:RoleViewModel">

    <VerticalStackLayout
        HorizontalOptions="CenterAndExpand"
        Spacing="20"
        VerticalOptions="CenterAndExpand">
        <Label
            FontSize="20"
            HorizontalOptions="Center"
            Text="Create new account as:" />
        <VerticalStackLayout Padding="20,0" Spacing="20">
            <Button
                Command="{Binding SignUpAsServiceUserCommand}"
                FontSize="18"
                HorizontalOptions="FillAndExpand"
                Text="Customer" />
            <Button
                Command="{Binding SignUpAsServiceProviderCommand}"
                FontSize="18"
                HorizontalOptions="FillAndExpand"
                Text="Service Provider" />
            <Label
                FontSize="18"
                HorizontalOptions="Center"
                Text="Already registered?" />
            <Button
                Command="{Binding SignInCommand}"
                FontSize="18"
                HorizontalOptions="FillAndExpand"
                Text="Sign in" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>