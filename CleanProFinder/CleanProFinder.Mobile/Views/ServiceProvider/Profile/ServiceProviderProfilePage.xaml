<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CleanProFinder.Mobile.Views.ServiceProvider.Profile.ServiceProviderProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:profile="clr-namespace:CleanProFinder.Mobile.ViewModels.ServiceProvider.Profile"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Profile"
    x:DataType="profile:ServiceProviderProfileViewModel"
    Background="{StaticResource Secondary}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
        <Style x:Key="entryGreenStyle" TargetType="Entry">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="TextColor" Value="{StaticResource Tertiary}" />
            <Setter Property="PlaceholderColor" Value="{StaticResource Primary}" />
            <Setter Property="IsReadOnly" Value="{Binding IsEditing, Converter={StaticResource InvertedBoolConverter}}" />
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <VerticalStackLayout
            Padding="10,0,10,0"
            Spacing="20"
            VerticalOptions="Center">
            <Entry
                Placeholder="Service Provider Name"
                Style="{StaticResource entryGreenStyle}"
                Text="{Binding Name}" />
            <Editor
                AutoSize="TextChanges"
                MaximumHeightRequest="100"
                Placeholder="Description"
                Style="{StaticResource entryGreenStyle}"
                Text="{Binding Description}" />
            <Entry
                Keyboard="Numeric"
                Placeholder="Phone Number"
                Style="{StaticResource entryGreenStyle}"
                Text="{Binding PhoneNumber}" />
            <Entry
                Placeholder="Website Url"
                Style="{StaticResource entryGreenStyle}"
                Text="{Binding WebsiteUrl}" />
            <HorizontalStackLayout HorizontalOptions="Center">
                <Image
                    HeightRequest="150"
                    Source="{Binding LogoImage.Source}"
                    WidthRequest="150" />
                <Button
                    Margin="30,0,0,0"
                    Command="{Binding AddLogoImageCommand}"
                    FontAttributes="Bold"
                    FontFamily="OpenSans"
                    FontSize="20"
                    Text="Add logo image"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>
            <VerticalStackLayout Spacing="10">
                <Button
                    Background="{StaticResource Primary}"
                    Command="{Binding StartEditingCommand}"
                    FontAttributes="Bold"
                    FontFamily="OpenSans"
                    FontSize="20"
                    IsVisible="{Binding IsEditing, Converter={StaticResource InvertedBoolConverter}}"
                    Text="Edit Profile"
                    TextColor="White" />
                <Button
                    Background="{StaticResource Tertiary}"
                    Command="{Binding UpdateProfileCommand}"
                    FontAttributes="Bold"
                    FontFamily="OpenSans"
                    FontSize="20"
                    IsVisible="{Binding IsEditing}"
                    Text="Update Profile"
                    TextColor="White" />
                <Button
                    Background="{StaticResource Primary}"
                    Command="{Binding LogoutCommand}"
                    FontAttributes="Bold"
                    FontFamily="OpenSans"
                    FontSize="20"
                    Text="Logout"
                    TextColor="White" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>